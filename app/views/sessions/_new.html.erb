
<% unless current_user.nil? %>
	<ul class="nav pull-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">
				<span class="hidden-phone"><%=current_user.name %></span>
				<b class="caret"></b>
			</a>
			<ul class="dropdown-menu">
				<li><%= link_to 'Logout', new_session_path, :method => :delete %></li>
			</ul>
		</li>
	</ul>
<% else %>
	<%= form_tag sessions_path {}, {:class => "navbar-form form-inline pull-right"} do %>
		<%= email_field_tag :email, params[:email], :class=>"input-small", :placeholder=>"E-Mail" %>
		<%= password_field_tag :password, params[:password], :class=>"input-small", :placeholder=>"Passwort" %>                 
		<%= submit_tag "Login", :class=>"btn" %>                           
	<% end %>
<% end %>
